{{#contentFor "page-header"}}
<header>
	<h3>Login to Quintro</h3>
</header>
{{/contentFor}}

<section class="login-section">
	<ul class="nav nav-tabs" data-tabs="tabs">
		<li class="active" role="presentation">
			<a href="#social-login" role="tab" data-toggle="tab">Facebook</a>
		</li>
